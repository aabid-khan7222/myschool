# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (required - no defaults for sensitive values)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=schooldb
DB_USER=schooluser
DB_PASSWORD=your_db_password_here

# JWT Configuration (required in production)
JWT_SECRET=your_strong_random_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS Configuration (local dev; in production set to your frontend URL e.g. https://your-static.onrender.com)
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
